<%- include('partials/header') %>
<body>
<h1 class="text-center my-4">Famous Quote Finder</h1>
<div class="container">
    <form action="/searchByKeyword" class="mb-3">
        <label>Keyword:</label>
        <input type="text" name="keyword" class="form-control" required>
        <button class="btn btn-primary mt-2">Search by Keyword</button>
    </form>

    <form action="/searchByAuthor" class="mb-3">
        <label>Author:</label>
        <select name="authorId" class="form-select">
            <% for (author of authors) { %>
                <option value="<%=author.authorId%>">
                    <%= author.firstName %> <%= author.lastName %>
                </option>
            <% } %>
        </select>
        <button class="btn btn-primary mt-2">Search by Author</button>
    </form>

    <form action="/searchByCategory" class="mb-3">
        <label>Category:</label>
        <select name="category" class="form-select">
            <% for (category of categories) { %>
                <option value="<%=category.category%>">
                    <%= category.category %>
                </option>
            <% } %>
        </select>
        <button class="btn btn-primary mt-2">Search by Category</button>
    </form>


</div>
<%- include('partials/footer') %>

</body>